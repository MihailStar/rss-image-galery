include ../container/container.pug

mixin header
  header.header&attributes(attributes)
    +container
      .header__row
        .header__topic
          .header-topic
            h1.header-topic__title Image Galery
            p.header-topic__description Поиск фотографий по ключевому слову

        .header__search-form
          form.header-search-form
            .header-search-form__wrapper
              label.header-search-form__title(for="d91eXZtQt9TXiDXDqvBX") Ключевое слово
            .header-search-form__wrapper
              input#d91eXZtQt9TXiDXDqvBX.header-search-form__input(
                type="search",
                placeholder="frontend",
                autocomplete="off",
                autofocus="autofocus"
              )
              button.header-search-form__reset.header-search-form__reset_hidden(
                type="reset",
                aria-hidden="true"
              )
                span Сбросить
                svg(
                  xmlns="http://www.w3.org/2000/svg",
                  width="24",
                  height="24",
                  viewBox="0 0 24 24",
                  aria-hidden="true"
                )
                  path(d="M0 0h24v24H0V0z", fill="none")
                  path(
                    d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z",
                    fill="currentColor"
                  )
              button.header-search-form__submit(type="submit")
                span Отправить
                svg(
                  xmlns="http://www.w3.org/2000/svg",
                  width="24",
                  height="24",
                  viewBox="0 0 24 24",
                  aria-hidden="true"
                )
                  path(d="M0 0h24v24H0V0z", fill="none")
                  path(
                    d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z",
                    fill="currentColor"
                  )
